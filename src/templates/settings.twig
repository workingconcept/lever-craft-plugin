{% import "_includes/forms" as forms %}

{{ forms.autosuggestField({
    first: true,
    label: 'API Key'|t,
    id: 'apiKey',
    required: true,
    name: 'apiKey',
    class: 'code',
    value: settings.apiKey,
    autofocus: true,
    errors: settings.getErrors('apiKey'),
    instructions: "Add your unique Lever API key."|t,
    suggestions: craft.cp.getEnvSuggestions()
}) }}

{{ forms.textField({
    label: 'External Job Site Handle'|t,
    id: 'site',
    required: true,
    name: 'site',
    class: 'code',
    value: settings.site,
    errors: settings.getErrors('site'),
    instructions: "Usually your company name in the form of a URL slug."|t
}) }}

{{ forms.textField({
    label: 'Job Application Source'|t,
    id: 'applicationSource',
    required: true,
    name: 'applicationSource',
    value: settings.applicationSource,
    errors: settings.getErrors('applicationSource'),
    instructions: "Add a value to be sent as the Source for job applications from this site."|t
}) }}

{{ forms.lightswitchField({
    label: 'Silent Job Applications?'|t,
    id: 'applySilently',
    required: false,
    name: 'applySilently',
    on: settings.applySilently,
    value: true,
    errors: settings.getErrors('applySilently'),
    instructions: "Switch off if candidate should receive an automatic confirmation email upon application."|t
}) }}